<%= form_with(model: book, html: { class: "space-y-6" }) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <div class="mt-1">
      <%= form.text_field :title %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <div class="mt-1">
      <%= form.text_field :author %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_score %>
    <div class="mt-1">
      <%= form.number_field :good_reads_score, step: 0.01 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_url %>
    <div class="mt-1">
      <%= form.text_field :good_reads_url %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_description %>
    <div class="mt-1">
      <%= form.text_area :good_reads_description %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :cover_url %>
    <div class="mt-1">
      <%= form.text_field :cover_url %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :publish_date %>
    <div class="mt-1">
      <%= form.date_field :publish_date %>
    </div>
  </div>

  <%= form.submit 'Submit', class: 'btn-primary' %>
<% end %>

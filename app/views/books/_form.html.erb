<%= form_with(model: book, html: { class: "standard-form" }) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Shantaram' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, placeholder: 'Gregory David Roberts' %>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_score %>
    <%= form.number_field :good_reads_score, step: 0.01, placeholder: '4.27' %>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_url %>
    <%= form.text_field :good_reads_url, placeholder: 'https://www.goodreads.com/book/show/33600.Shantaram' %>
  </div>

  <div class="form-group">
    <%= form.label :good_reads_description %>
    <%= form.text_area :good_reads_description, placeholder: 'Lorem Ipsum' %>
  </div>

  <div class="form-group">
    <%= form.label :cover_url %>
    <div class="mt-1">
      <%= form.text_field :cover_url, placeholder: 'https://images.com/archive' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :publish_date %>
    <%= form.date_field :publish_date %>
  </div>

  <%= form.submit 'Submit', class: 'btn-primary' %>
  <%= link_to 'Back', books_path, class: 'gray-lnk mx-2' %>
<% end %>
